{
  "extends": "@fltri",
  "env": {
    "es6": true,
    "node": true
  },
  "overrides": [
    {
      "files": [
        "test/**/*.ts"
      ],
      "env": {
        "es6": true,
        "node": true,
        "jest/globals": true
      },
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "sourceType": "module",
        "project": "./**/tsconfig.json"
      }
    }
  ],
  "rules": {
    "unicorn/prefer-node-protocol": [
      "off"
    ]
  }
}